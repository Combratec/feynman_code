# Cria um bloco de intruções com um nome que pode ser
# executado em qualquer parte do código
# através da palavra atribuida

# Criando uma função
funcao mostraArvore
{
     mostre "    *   "
     mostre "   ***  "
     mostre "  ***** "
     mostre "    *   "
}

# Chamando a função
mostraArvore

# Uma função com parâmetros
funcao calculaMedia recebe parametros nota1, nota2
{
    mostre "Sua média final é ", (nota1 + nota2) / 2
}

calculaMedia passando parametros 9.8, 7.5

